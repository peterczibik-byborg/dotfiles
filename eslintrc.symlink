{
  "extends": "standard",

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "plugins": [
    "standard",
    "react"
  ],

  "globals": {
    "document": false,
    "navigator": false,
    "window": false,
    "expect": false,
    "sinon": false,
    "before": false,
    "after": false,
    "afterEach": false,
    "describe": false,
    "beforeEach": false,
    "inject": false,
    "it": false
  },

  "rules": {
    "no-extend-native": [0]
  }
}
