[user]
  email = p.czibik@gmail.com
  name = Peter Czibik
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[alias]
  dt = difftool
  a="add"
  aa="add --all"
  c="commit"
  ca="commit -am"
  cl="clone"
  co="checkout"
  d="diff"
  l="log"
  lol="log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
  p="push"
  pr="pull --rebase"
  rh="reset head"
  st="status"
[core]
  excludesfile = /Users/peteyy/.gitignore_global
[merge]
  tool = splice
[push]
  default = simple
[pull]
	rebase = true
